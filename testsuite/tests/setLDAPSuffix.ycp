{

// test for SambaServer::setLDAPSuffix
// $Id$
// testedfiles: Samba.ycp, SambaServer.ycp

    include "testsuite.ycp";

    list rwe = [
            $[
                "target" : $[
                    "tmpdir" : "/tmp",
                    "size" : 0
                ]
            ],
            $[],
            $[
                "target" : $[
                    "bash_output" : $[]
                ]
            ]
        ];
    TESTSUITE_INIT(rwe, nil);
    import "SambaServer";
    
    SambaServer::setLDAPSuffix( "testing" );
    TEST( ``(SambaServer::LDAP_suffix), rwe, nil);
    TEST( ``(SambaServer::modified), rwe, nil);
    
    SambaServer::modified = false;
    SambaServer::setLDAPSuffix( "testing" );
    TEST( ``(SambaServer::LDAP_suffix), rwe, nil);
    // this time modified should not be set
    TEST( ``(SambaServer::modified), rwe, nil);

    SambaServer::setLDAPSuffix( "nexttesting" );
    TEST( ``(SambaServer::LDAP_suffix), rwe, nil);
    // modified again
    TEST( ``(SambaServer::modified), rwe, nil);
}
