// test for SambaServer::setAsBDC()
// $Id$

    include "testsuite.ycp";

    TESTSUITE_INIT( [], nil );
    
    import "SambaServer";
    
    DUMP(SambaServer::role);
    DUMP(Samba::security);
    DUMP( sformat( "Domain logons: %1", SambaServer::domain_logons) );
    DUMP( sformat( "Domain master: %1", SambaServer::domain_master) );
    DUMP( sformat( "Local master: %1", SambaServer::local_master) );
    DUMP( sformat( "Preferred master: %1", SambaServer::preferred_master) );
    
    Samba::modified = false;
    TEST( ``( SambaServer::setAsBDC() ), [], nil );

    DUMP(SambaServer::modified);
    DUMP(SambaServer::role);
    DUMP(Samba::security);

    DUMP( sformat( "Domain logons: %1", SambaServer::domain_logons) );
    DUMP( sformat( "Domain master: %1", SambaServer::domain_master) );
    DUMP( sformat( "Local master: %1", SambaServer::local_master) );
    DUMP( sformat( "Preferred master: %1", SambaServer::preferred_master) );
}
