{

// test for Samba::EnableServer( boolean ) - enable/disable smb/nmb service
// $Id$

    include "testsuite.ycp";

    list rwe = [
            $[
                "target" : $[
                    "tmpdir" : "/tmp",
                    "size" : 0
                ]
            ],
            $[],
            $[
                "target" : $[
                    "bash_output" : $[]
                ]
            ]
        ];
    TESTSUITE_INIT(rwe, nil);
    import "YaPI::Samba";
    
    TEST( ``("Disabled service"), rwe, nil);

    // disabled service
    TEST( ``( YaPI::Samba::GetServiceStatus() ), [ 
	$[ "init" : $[ "scripts" : $[ "exists" : true ] ] ],
	$[],
	$[ "target" :$[ "bash_output" : 
	    $[
		"exit" : 0,
	    ]
	] ]
    ], nil );

    TEST( ``("Enabled service"), rwe, nil);

    // enabled service
    TEST( ``( YaPI::Samba::GetServiceStatus() ), [ 
	$[ 
	    "init" : $[ 
		"scripts" : $[ 
		    "exists" : true,
		    "runlevel" : $[
			"smbd" : $[
			    "start" : [ "2", "3", "5" ],
			],
			"nmbd" : $[
			    "start" : [ "2", "3", "5" ],
			],
		    ],
		],
	    ],
	    
	],
	$[],
	$[ "target" :$[ "bash_output" : 
	    $[
		"exit" : 0,
	    ]
	] ]
    ], nil );
}
