{

// test for SambaServer::enableHomes( enable )
// $Id$
// testedfiles: Samba.ycp SambaServer.ycp

    include "testsuite.ycp";
    
    import "Samba";

    list rwe = [
            $[
                "target" : $[
                    "tmpdir" : "/tmp",
                    "size" : 0
                ]
            ],
            $[],
            $[
                "target" : $[
                    "bash_output" : $[]
                ]
            ]
        ];
    TESTSUITE_INIT(rwe, nil);
    import "SambaServer";
    
    SambaServer::share_homes = false;
    
    TEST( ``(SambaServer::share_homes), rwe, nil);
    TEST( ``(SambaServer::shares), rwe, nil);
    TEST( ``(SambaServer::modified), rwe, nil);
    
    Samba::modified = false;
    TEST( ``( SambaServer::enableHomes(true) ), rwe, nil);

    TEST( ``(SambaServer::share_homes), rwe, nil);
    TEST( ``(SambaServer::shares), rwe, nil);
    TEST( ``(SambaServer::modified), rwe, nil);

    TEST( ``( SambaServer::enableHomes(false) ), rwe, nil);

    TEST( ``(SambaServer::share_homes), rwe, nil);
    TEST( ``(SambaServer::shares), rwe, nil);
    TEST( ``(SambaServer::modified), rwe, nil);
}
