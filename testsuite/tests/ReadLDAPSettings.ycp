{

// test for SambaServer::ReadLDAPsettings()
// $Id$
// testedfiles: Samba.ycp, SambaServer.ycp

    include "testsuite.ycp";

    list rwe = [
            $[
                "target" : $[
                    "tmpdir" : "/tmp",
                    "size" : 0
                ]
            ],
            $[],
            $[
                "target" : $[
                    "bash_output" : $[]
                ]
            ]
        ];
    TESTSUITE_INIT(rwe, nil);
    import "SambaServer";
    
    TEST( ``( SambaServer::ReadLDAPSettings() ), [
        // read map
	$[
            "etc": $[ "smb" : $[ "value" : $[ "global" :$[
		"ldap suffix" : "dc=example,dc=com",
		"ldap admin dn" : "uid=root,dc=example,dc=com",
            ] ] ] ] ,
	    "passwd" : $[ "init" : true, "passwd" : $[ "pluslines" : [] ] ], 
        ],
	$[],
	$[ "passwd" : $[ "init" : true, "passwd" : $[ "pluslines" : [] ] ] ]
    ], nil );
    
    TEST( ``( SambaServer::LDAP_admin_dn ), rwe, nil);
    TEST( ``( SambaServer::LDAP_suffix ), rwe, nil);
    TEST( ``( SambaServer::modified ), rwe, nil);
}
