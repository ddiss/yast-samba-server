{

// test for SambaServer::enableLogon( enable )
// $Id$
// testedfiles: Samba.ycp SambaServer.ycp

    include "testsuite.ycp";
    
    import "Samba";

    TESTSUITE_INIT([
            $[
                "target" : $[
                    "tmpdir" : "/tmp"
                ]
            ],
            $[],
            $[
                "target" : $[
                    "bash_output" : $[]
                ]
            ]
        ],nil);    
    import "SambaServer";
    
    DUMP(SambaServer::shares);
    DUMP(SambaServer::global_config["domain logons"]:nil);
    DUMP(SambaServer::modified);
    
    Samba::modified = false;
    TEST( ``( SambaServer::enableNetlogon(true) ), [], nil );

    DUMP(SambaServer::shares);
    DUMP(SambaServer::global_config["domain logons"]:nil);
    DUMP(SambaServer::modified);

    TEST( ``( SambaServer::enableNetlogon(false) ), [], nil );

    DUMP(SambaServer::shares);
    DUMP(SambaServer::global_config["domain logons"]:nil);
    DUMP(SambaServer::modified);
}
