{

// test for SambaServer::enableLogon( enable )
// $Id$

    include "testsuite.ycp";

    TESTSUITE_INIT( [
        $[ "target" : $[ "tmpdir" : "/tmp" ] ],
        $[],
        $[
            "target" : $[
                "bash_output" : $[],
            ],
        ]
    ], nil );
    
    import "SambaServer";
    
    DUMP(SambaServer::shares);
    DUMP(SambaServer::domain_logons);
    DUMP(SambaServer::modified);
    
    Samba::modified = false;
    TEST( ``( SambaServer::enableLogon(true) ), [], nil );

    DUMP(SambaServer::shares);
    DUMP(SambaServer::domain_logons);
    DUMP(SambaServer::modified);

    TEST( ``( SambaServer::enableLogon(false) ), [], nil );

    DUMP(SambaServer::shares);
    DUMP(SambaServer::domain_logons);
    DUMP(SambaServer::modified);
}
