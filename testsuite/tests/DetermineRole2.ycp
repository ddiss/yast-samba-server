// test for SambaServer::DetermineRole() for BDC
// $Id$
// testedfiles: Samba.ycp, SambaServer.ycp

    include "testsuite.ycp";

    list rwe = [
            $[
                "target" : $[
                    "tmpdir" : "/tmp",
                    "size" : 0
                ]
            ],
            $[],
            $[
                "target" : $[
                    "bash_output" : $[]
                ]
            ]
        ];
    TESTSUITE_INIT(rwe, nil);
    import "SambaServer";

    TEST( ``(SambaServer::role), rwe, nil);

    TEST( ``( SambaServer::setAsBDC() ), rwe, nil);

    TEST( ``(SambaServer::DetermineRole()), rwe, nil);

}
