{

// test for SambaServer::ReloadSettings()
// $Id$
// testedfiles: Samba.ycp, SambaServer.ycp

    include "testsuite.ycp";

    list rwe = [
            $[
                "target" : $[
                    "tmpdir" : "/tmp",
                    "size" : 0
                ]
            ],
            $[],
            $[
                "target" : $[
                    "bash_output" : $[]
                ]
            ]
        ];
    TESTSUITE_INIT(rwe, nil);
    import "SambaServer";
    
    TEST( ``( SambaServer::ReloadSettings() ), [
	$[],
	$[],
	$[ "target" : $[ "bash" : 0 ] ] 
    ], true );
    
    TEST( ``( SambaServer::ReloadSettings() ), [
	$[],
	$[],
	$[ "target" : $[ "bash" : 1 ] ] 
    ], true );
    
    TEST( ``( SambaServer::modified ), rwe, nil);
}
